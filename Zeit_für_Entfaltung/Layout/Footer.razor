<style>
    .footer {
        background-color: #f5f4f1;
        padding: 3rem 0 1.5rem;
        margin-top: 2rem;
        color: var(--taupe-color);
    }

        .footer h4 {
            font-family: 'Cormorant Garamond', serif;
            font-size: 1.8rem;
            color: var(--corduroy-color);
            margin-bottom: 1rem;
        }

        .footer p {
            margin-bottom: 0.5rem;
        }

    .social-links {
        display: flex;
        gap: 1.5rem;
    }

        .social-links a {
            display: flex;
            align-items: center;
            justify-content: center;
            width: 40px;
            height: 40px;
            background-color: var(--bud-color);
            color: white;
            border-radius: 50%;
            transition: all 0.3s ease;
        }

            .social-links a:hover {
                background-color: var(--corduroy-color);
                transform: translateY(-3px);
            }

        .social-links i {
            font-size: 1.2rem;
        }

    .footer-bottom {
        margin-top: 2rem;
        padding-top: 1.5rem;
        border-top: 1px solid rgba(112, 97, 87, 0.1);
        text-align: center;
        font-size: 0.9rem;
    }

        .footer-bottom a {
            color: var(--taupe-color);
            text-decoration: none;
            transition: color 0.3s ease;
        }

            .footer-bottom a:hover {
                color: var(--corduroy-color);
            }

        .footer-bottom p {
            margin-top: 1rem;
            opacity: 0.8;
        }

    @@media (max-width: 767px) {
        .footer-contact {
            text-align: center;
            margin-bottom: 1.5rem;
        }
    }
</style>

