@page "/kontakt"
@inject IJSRuntime JSRuntime

<PageTitle>Kontakt - Zeit für Entfaltung</PageTitle>



<div class="kontakt-page">
    <!-- Kontakt Info Section -->
    <section class="kontakt-info-section section">
        <div class="container">
            <div class="contact-card animate-scaleIn">
                <h2 class="section-heading text-center">Wie du mich erreichen kannst</h2>
                <div class="divider"></div>
                
                <div class="kontakt-methods">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="method-item animate-fadeInLeft" style="animation-delay: 0.3s">
                                <div class="method-icon">
                                    <i class="fas fa-envelope"></i>
                                </div>
                                <div class="method-content">
                                    <h3 class="method-title">E-Mail</h3>
                                    <p class="method-text">Schreib mir eine E-Mail und ich melde mich bei dir</p>
                                    <a href="mailto:jeannette.froehlich@yahoo.de" class="method-link">jeannette.froehlich@yahoo.de</a>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="method-item animate-fadeInRight" style="animation-delay: 0.3s">
                                <div class="method-icon">
                                    <i class="fab fa-whatsapp"></i>
                                </div>
                                <div class="method-content">
                                    <h3 class="method-title">WhatsApp</h3>
                                    <p class="method-text">Für schnelle Anfragen bin ich auch per WhatsApp erreichbar</p>
                                    <a href="https://wa.me/4960319648368" class="method-link">06031-9648368</a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="method-item animate-fadeInLeft" style="animation-delay: 0.5s">
                                <div class="method-icon">
                                    <i class="fab fa-instagram"></i>
                                </div>
                                <div class="method-content">
                                    <h3 class="method-title">Instagram</h3>
                                    <a href="https://www.instagram.com/zeit_fuer_entfaltung/" target="_blank" class="method-link d-block mb-2">@@zeit_fuer_entfaltung</a>
                                    <a href="https://www.instagram.com/zeit_fuer_oeleliebe/" target="_blank" class="method-link d-block">@@zeit_fuer_oeleliebe</a>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="method-item animate-fadeInRight" style="animation-delay: 0.5s">
                                <div class="method-icon">
                                    <i class="fas fa-map-marker-alt"></i>
                                </div>
                                <div class="method-content">
                                    <h3 class="method-title">Standort</h3>
                                    <p class="method-text">Wetteraukreis, Hessen</p>
                                    <p class="method-text">Termine nach Vereinbarung</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

<style>
    /* Kontakt Page Styles - Updated to match theme.css */
    
    /* Hero Section */
    .kontakt-hero {
        background-color: var(--light-green);
    }
    
    .kontakt-hero .hero-background {
        background-image: 
            radial-gradient(circle at 30% 40%, rgba(131, 167, 143, 0.2) 0%, transparent 30%),
            radial-gradient(circle at 70% 60%, rgba(131, 167, 143, 0.2) 0%, transparent 30%);
    }
    
    /* Contact Card */
    .contact-card {
        background-color: white;
        border-radius: var(--radius-lg);
        padding: var(--space-lg);
        box-shadow: var(--shadow-md);
        border-top: 4px solid var(--secondary-green);
    }
    
    /* Contact Methods */
    .kontakt-methods {
        margin-top: var(--space-md);
    }
    
    .method-item {
        display: flex;
        align-items: center;
        margin-bottom: var(--space-md);
        padding: var(--space-md);
        background-color: var(--very-light-green);
        border-radius: var(--radius-md);
        transition: transform var(--transition-medium), box-shadow var(--transition-medium);
    }
    
    .method-item:hover {
        transform: translateY(-3px);
        box-shadow: var(--shadow-md);
        background-color: var(--light-green);
    }
    
    .method-icon {
        flex: 0 0 60px;
        height: 60px;
        background-color: var(--primary-green);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-right: var(--space-md);
        color: white;
        font-size: 1.5rem;
        box-shadow: var(--shadow-sm);
    }
    
    .method-content {
        flex: 1;
    }
    
    .method-title {
        font-family: var(--heading-font);
        font-size: 1.5rem;
        color: var(--primary-green);
        margin-bottom: 0.5rem;
        font-weight: 600;
    }
    
    .method-text {
        font-size: 1rem;
        line-height: 1.5;
        margin-bottom: 0.5rem;
        color: var(--corduroy);
    }
    
    .method-link {
        color: var(--accent-green);
        font-weight: 500;
        text-decoration: none;
        transition: color var(--transition-fast);
    }
    
    .method-link:hover {
        color: var(--primary-green);
    }
    
    /* Form Styles */
    .form-section {
        background-color: var(--very-light-green);
        padding: var(--space-lg) 0;
    }
    
    .form-container {
        max-width: 800px;
        margin: 0 auto;
        padding: var(--space-lg);
        background-color: white;
        border-radius: var(--radius-lg);
        box-shadow: var(--shadow-md);
        border-top: 4px solid var(--secondary-green);
    }
    
    .form-title {
        font-family: var(--heading-font);
        font-size: 2.2rem;
        color: var(--primary-green);
        text-align: center;
        margin-bottom: var(--space-md);
        font-weight: 600;
    }
    
    .form-group {
        margin-bottom: var(--space-md);
    }
    
    .form-label {
        display: block;
        margin-bottom: 0.5rem;
        color: var(--corduroy);
        font-weight: 500;
    }
    
    .form-control {
        width: 100%;
        padding: 0.8rem 1rem;
        border: 1px solid var(--light-green);
        border-radius: var(--radius-md);
        background-color: var(--very-light-green);
        transition: all var(--transition-fast);
    }
    
    .form-control:focus {
        outline: none;
        border-color: var(--secondary-green);
        background-color: white;
        box-shadow: 0 0 0 3px rgba(131, 167, 143, 0.2);
    }
    
    .form-control.textarea {
        min-height: 150px;
        resize: vertical;
    }
    
    .form-button {
        display: inline-block;
        background-color: var(--primary-green);
        color: white;
        padding: 0.8rem 2.5rem;
        border: none;
        border-radius: var(--radius-rounded);
        font-weight: 600;
        cursor: pointer;
        transition: all var(--transition-medium);
        margin-top: var(--space-sm);
        box-shadow: var(--shadow-sm);
    }
    
    .form-button:hover {
        background-color: var(--accent-green);
        transform: translateY(-3px);
        box-shadow: var(--shadow-md);
    }
    
    .form-button:disabled {
        background-color: var(--secondary-green);
        cursor: not-allowed;
        transform: none;
    }
    
    .form-status {
        margin-top: var(--space-md);
        padding: var(--space-sm);
        border-radius: var(--radius-md);
        text-align: center;
    }
    
    .form-status.success {
        background-color: rgba(40, 167, 69, 0.1);
        border: 1px solid rgba(40, 167, 69, 0.2);
        color: #28a745;
    }
    
    .form-status.error {
        background-color: rgba(220, 53, 69, 0.1);
        border: 1px solid rgba(220, 53, 69, 0.2);
        color: #dc3545;
    }
    
    /* Responsive Adjustments */
    @@media (max-width: 992px) {
        .contact-card {
            padding: var(--space-md);
        }
        
        .method-item {
            padding: var(--space-sm);
        }
        
        .method-icon {
            flex: 0 0 50px;
            height: 50px;
            margin-right: var(--space-sm);
        }
    }
    
    @@media (max-width: 768px) {
        .hero-section h1 {
            font-size: 2.5rem;
        }
        
        .hero-tagline {
            font-size: 1.3rem;
        }
        
        .section-heading {
            font-size: 1.8rem;
        }
        
        .method-title {
            font-size: 1.3rem;
        }
        
        .form-title {
            font-size: 1.8rem;
        }
    }
    
    @@media (max-width: 576px) {
        .contact-card {
            padding: var(--space-sm);
        }
        
        .method-item {
            flex-direction: column;
            text-align: center;
            padding: var(--space-md) var(--space-sm);
        }
        
        .method-icon {
            margin-right: 0;
            margin-bottom: var(--space-sm);
        }
    }
</style>

