            z-index: 1;
        }

    .hero-title {
        font-family: 'Cormorant Garamond', serif;
        font-size: 3.5rem;
        color: #fff;
        text-align: center;
        margin: 0;
        position: relative;
        z-index: 2;
        text-shadow: 0 2px 10px rgba(0, 0, 0, 0.2);
    }

    .kontakt-info-section {
        padding: 2rem 0 4rem;
    }

    .kontakt-info-container {
        max-width: 1100px;
        margin: 0 auto;
        padding: 0 1.5rem;
    }

    .kontakt-methods {
        margin-bottom: 3rem;
    }

    .method-item {
        display: flex;
        align-items: center;
        margin-bottom: 1.5rem;
        padding: 1.5rem;
        background-color: #f5f4f1;
        border-radius: 8px;
        transition: transform 0.3s ease, background-color 0.3s ease;
    }

        .method-item:hover {
            transform: translateY(-3px);
            background-color: #eeede9;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
        }

    .method-icon {
        flex: 0 0 60px;
        height: 60px;
        background-color: #706157;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-right: 1.5rem;
        color: white;
        font-size: 1.5rem;
    }

    .method-content {
        flex: 1;
    }

    .method-title {
        font-family: 'Cormorant Garamond', serif;
        font-size: 1.5rem;
        color: #4e4636;
        margin-bottom: 0.5rem;
    }

    .method-text {
        font-size: 1rem;
        line-height: 1.5;
        margin-bottom: 0.5rem;
        color: #706157;
    }

    .method-link {
        color: #706157;
        font-weight: 500;
        text-decoration: none;
        transition: color 0.3s ease;
    }

        .method-link:hover {
            color: #4e4636;
        }

    .form-section {
        background-color: #f5f4f1;
        padding: 4rem 0;
    }

    .form-container {
        max-width: 800px;
        margin: 0 auto;
        padding: 2.5rem;
        background-color: #fff;
        border-radius: 10px;
        box-shadow: 0 10px 30px rgba(112, 97, 87, 0.1);
    }

    .form-title {
        font-family: 'Cormorant Garamond', serif;
        font-size: 2.2rem;
        color: #4e4636;
        text-align: center;
        margin-bottom: 2rem;
        position: relative;
        padding-bottom: 1rem;
    }

        .form-title:after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 50%;
            transform: translateX(-50%);
            width: 80px;
            height: 2px;
            background-color: #b0b1a8;
        }

    .form-group {
        margin-bottom: 1.5rem;
    }

    .form-label {
        display: block;
        margin-bottom: 0.5rem;
        color: #706157;
        font-weight: 500;
    }

    .form-control {
        width: 100%;
        padding: 0.8rem 1rem;
        border: 1px solid #e5e4e1;
        border-radius: 5px;
        background-color: #f9f9f8;
        transition: all 0.3s ease;
    }

        .form-control:focus {
            outline: none;
            border-color: #b0b1a8;
            background-color: #fff;
            box-shadow: 0 0 0 3px rgba(176, 177, 168, 0.2);
        }

        .form-control.textarea {
            min-height: 150px;
            resize: vertical;
        }

    .form-button {
        display: inline-block;
        background-color: #706157;
        color: white;
        padding: 0.8rem 2.5rem;
        border: none;
        border-radius: 30px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        margin-top: 1rem;
    }

        .form-button:hover {
            background-color: #5a504a;
            transform: translateY(-3px);
        }

        .form-button:disabled {
            background-color: #b0b1a8;
            cursor: not-allowed;
            transform: none;
        }

    .form-status {
        margin-top: 1.5rem;
        padding: 1rem;
        border-radius: 5px;
        text-align: center;
    }

        .form-status.success {
            background-color: rgba(40, 167, 69, 0.1);
            border: 1px solid rgba(40, 167, 69, 0.2);
            color: #28a745;
        }

        .form-status.error {
            background-color: rgba(220, 53, 69, 0.1);
            border: 1px solid rgba(220, 53, 69, 0.2);
            color: #dc3545;
        }

    /* Responsive adjustments */
    @@media (max-width: 992px) {
        .method-item {
            padding: 1.2rem;
        }

        .method-icon {
            flex: 0 0 50px;
            height: 50px;
            margin-right: 1rem;
        }
    }

    @@media (max-width: 768px) {
        .hero-title {
            font-size: 2.8rem;
        }

        .form-title {
            font-size: 2rem;
        }

        .form-container {
            padding: 2rem;
        }
    }

    @@media (max-width: 576px) {
        .hero-title {
            font-size: 2.3rem;
        }

        .method-item {
            flex-direction: column;
            text-align: center;
        }

        .method-icon {
            margin-right: 0;
            margin-bottom: 1rem;
        }

        .form-container {
            padding: 1.5rem;
        }

        .form-title {
            font-size: 1.8rem;
        }
    }
</style>

