@page "/"

<style>
    /* Enhanced Hero Section */
    .hero-section {
        position: relative;
        min-height: 60vh;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 5rem 0;
        background-color: #f8f7f5;
        overflow: hidden;
    }

        .hero-section::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background-image: linear-gradient(135deg, rgba(176, 177, 168, 0.1) 0%, rgba(112, 97, 87, 0.05) 100%);
            z-index: 1;
        }

    .hero-content {
        position: relative;
        z-index: 2;
        text-align: center;
        animation: fadeInUp 1.2s ease-out forwards; /* Added 'forwards' to maintain final state */
    }

    .hero-image {
        max-width: 80%;
        height: auto;
        border-radius: 8px;
        box-shadow: 0 15px 40px rgba(112, 97, 87, 0.15);
        transition: all 0.5s ease;
        display: block; /* Added to ensure the image stays visible */
    }

        .hero-image:hover {
            transform: scale(1.02) translateY(-5px);
            box-shadow: 0 20px 50px rgba(112, 97, 87, 0.2);
        }

    /* Enhanced Welcome Section */
    .welcome-section {
        padding: 6rem 0;
        background-color: #fff;
        position: relative;
    }

        .welcome-section::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-image: url("data:image/svg+xml,%3Csvg width='60' height='60' viewBox='0 0 60 60' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='none' fill-rule='evenodd'%3E%3Cg fill='%23b0b1a8' fill-opacity='0.08'%3E%3Cpath d='M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z'/%3E%3C/g%3E%3C/g%3E%3C/svg%3E");
            opacity: 0.5;
            z-index: 0;
        }

    .welcome-text {
        font-size: 1.15rem;
        line-height: 1.8;
        max-width: 850px;
        margin: 0 auto;
        padding: 3rem;
        background-color: rgba(255, 255, 255, 0.95);
        border-radius: 12px;
        box-shadow: 0 10px 30px rgba(112, 97, 87, 0.1);
        position: relative;
        z-index: 1;
        animation: fadeIn 1.5s ease forwards; /* Added 'forwards' to maintain final state */
    }

    .welcome-heading {
        font-size: 2.4rem;
        margin-bottom: 2rem;
        color: var(--taupe-color);
        text-align: center;
        font-weight: 500;
        position: relative;
    }

        .welcome-heading::after {
            content: '';
            position: absolute;
            bottom: -12px;
            left: 50%;
            transform: translateX(-50%);
            width: 80px;
            height: 2px;
            background-color: var(--bud-color);
        }

    .welcome-quote {
        margin: 2.5rem 0;
        padding: 2rem;
        border-left: 4px solid var(--bud-color);
        background-color: rgba(176, 177, 168, 0.08);
        border-radius: 0 12px 12px 0;
        position: relative;
    }

        .welcome-quote::before {
            content: '"';
            position: absolute;
            top: -15px;
            left: 20px;
            font-size: 4rem;
            color: var(--bud-color);
            opacity: 0.3;
            font-family: 'Georgia', serif;
        }

        .welcome-quote p {
            font-size: 1.8rem;
            font-family: 'Cormorant Garamond', serif;
            font-weight: 400;
            font-style: italic;
            margin: 0;
            color: var(--taupe-color);
            line-height: 1.4;
            position: relative;
            z-index: 1;
        }

    .mission-statement {
        font-size: 1.25rem;
        color: var(--corduroy-color);
        margin-bottom: 2rem;
        font-weight: 400;
        padding: 0 1rem;
        border-bottom: 1px solid rgba(176, 177, 168, 0.2);
        padding-bottom: 2rem;
    }

    .welcome-text p {
        margin-bottom: 1.8rem;
        font-weight: 300;
    }

    .cta-container {
        text-align: center;
        margin-top: 3rem;
    }

    .cta-button {
        display: inline-block;
        padding: 14px 32px;
        background-color: var(--corduroy-color);
        color: white;
        border-radius: 30px;
        text-decoration: none;
        font-weight: 500;
        font-size: 1.1rem;
        letter-spacing: 0.5px;
        transition: all 0.4s ease;
        box-shadow: 0 6px 15px rgba(90, 94, 92, 0.2);
        position: relative;
        overflow: hidden;
    }

        .cta-button::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
            transition: all 0.6s ease;
        }

        .cta-button:hover {
            background-color: var(--taupe-color);
            transform: translateY(-3px);
            box-shadow: 0 8px 20px rgba(90, 94, 92, 0.3);
            color: white;
            text-decoration: none;
        }

            .cta-button:hover::before {
                left: 100%;
            }

    /* Animations */
    @@keyframes fadeIn {
        from

    {
        opacity: 0;
    }

    to {
        opacity: 1;
    }

    }

    @@keyframes fadeInUp {
        from

    {
        opacity: 0;
        transform: translateY(20px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }

    /* Responsive Adjustments */
    @@media (max-width: 992px) {
        .hero-section

    {
        min-height: 50vh;
        padding: 4rem 0;
    }

    .welcome-text {
        padding: 2.5rem;
    }

    }

    @@media (max-width: 768px) {
        .hero-section

    {
        min-height: 40vh;
    }

    .hero-image {
        max-width: 90%;
    }

    .welcome-heading {
        font-size: 2rem;
    }

    .welcome-quote p {
        font-size: 1.6rem;
    }

    .welcome-text {
        padding: 2rem;
    }

    }

    @@media (max-width: 576px) {
        .hero-section

    {
        min-height: 30vh;
        padding: 3rem 0;
    }

    .welcome-heading {
        font-size: 1.8rem;
    }

    .welcome-quote {
        padding: 1.5rem;
        margin: 2rem 0;
    }

        .welcome-quote p {
            font-size: 1.4rem;
        }

    .mission-statement {
        font-size: 1.15rem;
    }

    .welcome-text {
        padding: 1.5rem;
    }

    .cta-button {
        padding: 12px 28px;
        font-size: 1rem;
    }

    }

    /* Ensure CSS variables are defined if not elsewhere */
    :root {
        --taupe-color: #706157;
        --corduroy-color: #5a5e5c;
        --bud-color: #b0b1a8;
    }
</style>

<div class="hero-section">
    <div class="hero-content">
        <img src="images/Logo-e7548854-1920w.webp" alt="Zeit für Entfaltung" class="hero-image mb-4" />
