            z-index: 0;
        }

    .qualifications-title {
        text-align: center;
        font-family: 'Cormorant Garamond', serif;
        font-size: 2.5rem;
        color: #4e4636;
        margin-bottom: 1rem;
        position: relative;
        z-index: 1;
    }

    .qualifications-divider {
        width: 80px;
        height: 3px;
        background-color: #b0b1a8;
        margin: 0 auto 3rem;
        position: relative;
        z-index: 1;
    }

    .qualifications-list {
