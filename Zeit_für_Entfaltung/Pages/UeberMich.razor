        text-align: center;
        margin: 0;
        position: relative;
        z-index: 2;
        text-shadow: 0 2px 10px rgba(0, 0, 0, 0.2);
    }

    @@media (max-width: 768px) {
        .hero-title {
            font-size: 2.8rem;
        }

        .qualifications-list li {
            font-size: 1.1rem;
        }

        .about-me-name {
