                box-shadow: 0 0 0 2px rgba(176, 177, 168, 0.3);
            }

    .contact-section {
        padding: 5rem 0;
        background-color: #fff;
        text-align: center;
    }

    .contact-title {
        font-family: 'Cormorant Garamond', serif;
        font-size: 2.5rem;
        color: #4e4636;
        margin-bottom: 1rem;
        position: relative;
        display: inline-block;
    }

        .contact-title:after {
            content: '';
            position: absolute;
            width: 60px;
            height: 3px;
            background-color: #b0b1a8;
            bottom: -10px;
            left: 50%;
            transform: translateX(-50%);
        }

    .contact-list {
        list-style: none;
        padding-left: 0;
        margin: 3rem auto;
        position: relative;
        max-width: 600px;
    }

        .contact-list li {
            font-size: 1.2rem;
            margin-bottom: 1.5rem;
            display: flex;
            align-items: center;
            justify-content: center;
        }

            .contact-list li a {
                color: #4e4636;
                text-decoration: none;
                transition: color 0.3s ease;
                display: flex;
                align-items: center;
            }

                .contact-list li a:hover {
                    color: #b0b1a8;
                }

            .contact-list li i {
                margin-right: 10px;
                font-size: 1.5rem;
                color: #b0b1a8;
            }

    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
