        z-index: 1;
    }

    .hero-title {
        font-family: 'Cormorant Garamond', serif;
        font-size: 3.5rem;
        color: #fff;
        text-align: center;
        margin: 0;
        position: relative;
        z-index: 2;
        text-shadow: 0 2px 10px rgba(0, 0, 0, 0.2);
    }

    .angebote-intro {
        text-align: center;
        max-width: 800px;
        margin: 0 auto 4rem;
        padding: 0 1.5rem;
    }

    .angebote-intro-text {
        font-size: 1.1rem;
        line-height: 1.7;
        color: #706157;
    }

    .offerings-section {
        padding: 2rem 0 5rem;
    }

    .offering-card {
        background-color: #fff;
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0 5px 30px rgba(0, 0, 0, 0.1);
        height: 100%;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        margin-bottom: 2rem;
    }

    .offering-card:hover {
        transform: translateY(-10px);
        box-shadow: 0 15px 40px rgba(0, 0, 0, 0.15);
    }

    .offering-image {
        width: 100%;
        height: 300px;
        object-fit: cover;
    }

    .offering-content {
        padding: 2.5rem;
        text-align: center;
    }

    .offering-title {
        font-family: 'Cormorant Garamond', serif;
        font-size: 2rem;
        color: #b0b1a8;
        margin-bottom: 1.5rem;
    }

    .offering-description {
        font-size: 1.05rem;
        line-height: 1.6;
        color: #4e4636;
        margin-bottom: 2rem;
        min-height: 5rem;
    }

    .badge-status {
        display: inline-block;
        background-color: #706157;
        color: white;
        padding: 0.3rem 1rem;
        border-radius: 20px;
        font-size: 0.9rem;
        margin-bottom: 1.5rem;
    }

    .btn-offering {
        display: inline-block;
        background-color: #b0b1a8;
        color: white;
        padding: 0.8rem 2rem;
        border-radius: 30px;
        text-decoration: none;
        font-weight: 500;
        transition: all 0.3s ease;
    }

    .btn-offering:hover {
        background-color: #706157;
        transform: translateY(-3px);
    }

    .für-dich-image {
        max-width: 180px;
        margin: 0 auto 1.5rem;
        display: block;
    }

    /* Responsive adjustments */
    @@media (max-width: 992px) {
        .offering-description {
            min-height: auto;
        }
    }

    @@media (max-width: 768px) {
        .hero-title {
            font-size: 2.8rem;
        }

        .offering-content {
            padding: 2rem;
        }

        .offering-title {
            font-size: 1.8rem;
        }
    }

    @@media (max-width: 576px) {
        .hero-title {
            font-size: 2.3rem;
        }

        .offering-content {
            padding: 1.5rem;
        }

        .offering-image {
            height: 200px;
        }
    }
</style>

<div class="angebote-page">
    <!-- Hero Section -->
    <section class="angebote-hero">
        <h1 class="hero-title">Meine Angebote</h1>
    </section>

    <div class="angebote-intro">
        <p class="angebote-intro-text">
            Hier findest du eine Übersicht meiner verschiedenen Angebote, die dich auf deinem persönlichen Weg unterstützen können. 
            Von intensiven Coachings bis hin zu Materialien für dein Zuhause - entdecke, was am besten zu dir und deinen Bedürfnissen passt.
        </p>
    </div>

    <!-- Offerings Section -->
    <section class="offerings-section">
        <div class="container">
            <div class="row">
                <!-- Coaching und Kurse -->
                <div class="col-lg-4">
                    <div class="offering-card">
                        <img src="images/coaching-stones.jpg" alt="Coaching und Kurse" class="offering-image" onerror="this.src='images/Schildi.png'; this.onerror=null;" />
                        <div class="offering-content">
                            <h2 class="offering-title">Coaching und Kurse</h2>
                            <p class="offering-description">
                                Individuelle Begleitung und Gruppenangebote für persönliches Wachstum und mehr Ausgeglichenheit im Alltag.
                            </p>
                            <div class="badge-status">Aktuell</div>
                            <a href="kurse" class="btn-offering">Zu den Kursen</a>
                        </div>
                    </div>
                </div>

                <!-- Human Design & Ätherische Öle -->
                <div class="col-lg-4">
                    <div class="offering-card">
                        <img src="images/human-design-heart.jpg" alt="Human Design & Ätherische Öle" class="offering-image" onerror="this.src='images/Schildi.png'; this.onerror=null;" />
                        <div class="offering-content">
                            <h2 class="offering-title">Human Design & Ätherische Öle</h2>
                            <p class="offering-description">
                                Entdecke deine energetische Blaupause und erlebe die unterstützende Kraft ätherischer Öle für dein Wohlbefinden.
                            </p>
                            <div class="badge-status">Aktuell</div>
                            <a href="humandesign" class="btn-offering">Zu den Kursen</a>
                        </div>
                    </div>
                </div>

                <!-- Für Dich -->
                <div class="col-lg-4">
                    <div class="offering-card">
                        <img src="images/hand-heart.jpg" alt="Für Dich" class="offering-image" onerror="this.src='images/Schildi.png'; this.onerror=null;" />
                        <div class="offering-content">
                            <img src="images/hand-heart-line.png" alt="Hand mit Herz" class="für-dich-image" onerror="this.style.display='none';" />
                            <h2 class="offering-title">Für Dich</h2>
                            <p class="offering-description">
                                Fantasiereisen, Meditationen, kleine Videos und Podcast für Dich zu Hause.
                            </p>
                            <div class="badge-status">Wird noch aktualisiert</div>
                            <a href="fuer-dich" class="btn-offering">Schau hier</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

