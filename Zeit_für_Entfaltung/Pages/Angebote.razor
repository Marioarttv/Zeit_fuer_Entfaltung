@* @page "/angebot"
@using Microsoft.AspNetCore.Components.Web

<PageTitle>Angebote - Zeit für Entfaltung</PageTitle>

<style>
    /* Angebote Page Styles */
    .angebote-page {
        font-family: 'Montserrat', sans-serif;
        color: #4e4636;
    }

    .angebote-hero {
        position: relative;
        min-height: 30vh;
        background-color: #b0b1a8;
        background-image: linear-gradient(135deg, rgba(176, 177, 168, 0.8), rgba(112, 97, 87, 0.6));
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 4rem 2rem;
        overflow: hidden;
        margin-bottom: 3rem;
    }

    .angebote-hero::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
