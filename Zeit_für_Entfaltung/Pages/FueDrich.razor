<div class="fuer-dich-page">
    <!-- Hero Section -->
    <section class="fuer-dich-hero">
        <h1 class="hero-title">Für Dich</h1>
    </section>

    <!-- Introduction Section -->
    <section class="intro-section">
        <div class="intro-container">
            <img src="images/hand-heart-line.png" alt="Herz in Hand" class="intro-image" onerror="this.src='images/Schildi.png'; this.onerror=null;" />
