                <div class="form-group">
                    <label for="name" class="form-label">Name</label>
                    <input type="text" id="name" class="form-control" placeholder="Dein Name">
                </div>
                <div class="form-group">
                    <label for="email" class="form-label">E-Mail</label>
                    <input type="email" id="email" class="form-control" placeholder="Deine E-Mail Adresse">
                </div>
                <button type="submit" class="newsletter-button">Jetzt anmelden</button>
            </div>
        </div>
    </section>
</div>

