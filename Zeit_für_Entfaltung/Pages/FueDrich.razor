    }

    @@media (max-width: 768px) {
        .hero-title {
            font-size: 2.8rem;
        }

        .intro-title, .content-cards-title, .newsletter-title {
            font-size: 2.2rem;
        }

        .newsletter-form {
            padding: 1.5rem;
        }
    }

    @@media (max-width: 576px) {
        .hero-title {
            font-size: 2.3rem;
        }

        .intro-title, .content-cards-title, .newsletter-title {
            font-size: 1.8rem;
        }

        .content-card-title {
            font-size: 1.5rem;
        }
